<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBEF4"
    tools:context=".IdentifyGameActivity">
  <ImageView
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:id="@+id/back_btn"
      android:clickable="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_margin="10dp"
      android:src="@drawable/baseline_arrow_back_24"/>
  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="wrap_content"
      android:id="@+id/timer_layout"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="40dp"
      app:layout_constraintStart_toStartOf="parent"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_text"
        android:text="Timer: "
        android:textSize="36sp"
        android:layout_marginTop="16dp"
        android:textColor="#E91E63" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="30"
        android:textSize="36sp"
        android:layout_marginTop="16dp"
        android:textColor="#3F51B5" />
  </androidx.appcompat.widget.LinearLayoutCompat>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/timer_layout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:textStyle="bold"
      android:id="@+id/correct_text"
      android:text="Correct Taps:42"
      android:textSize="28sp"
      android:visibility="gone"
      android:layout_marginTop="46dp"
      android:textColor="#35BC10"/>
  <TextView
      android:id="@+id/wrong_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/correct_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:textStyle="bold"
      android:visibility="gone"
      android:text="Wrong Taps:42"
      android:textSize="28sp"
      android:layout_marginTop="10dp"
      android:textColor="#BC1010"/>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      app:layout_constraintTop_toBottomOf="@id/timer_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/clickable_box"
    android:clickable="true"
    android:layout_marginTop="40dp"
      android:visibility="visible"
    app:cardBackgroundColor="#FFF27D">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_margin="5dp"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:id="@+id/c1"
          android:backgroundTint="#FF0000"
          app:cardCornerRadius="15dp"
          android:clickable="true"
          />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c2"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c3"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c4"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c5"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="55dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c6"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c7"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />

        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c8"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c9"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/c4"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c10"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/c4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="85dp"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c11"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/c6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c12"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />

        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/c5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c13"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c11"
            app:layout_constraintEnd_toStartOf="@id/c12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c14"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c8"
            app:layout_constraintEnd_toStartOf="@id/c9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/c15"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c9"
            app:layout_constraintEnd_toStartOf="@id/c4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c16"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c9"
            app:layout_constraintEnd_toStartOf="@id/c4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c17"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c9"
            app:layout_constraintEnd_toStartOf="@id/c4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c18"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c1"
            app:layout_constraintEnd_toStartOf="@id/c2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c19"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintStart_toStartOf="@id/c13"
            app:layout_constraintEnd_toStartOf="@id/c5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/c20"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FF0000"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="160dp"
      android:layout_height="50dp"
      android:id="@+id/start_btn"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="105dp"
      app:cardCornerRadius="30dp"
      android:backgroundTint="#0A6123"
      >
    <TextView
        android:id="@+id/start_btn_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TAP TO START"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="160dp"
      android:layout_height="50dp"
      android:id="@+id/reset_btn"
      app:layout_constraintBottom_toTopOf="@id/start_btn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="105dp"
      app:cardCornerRadius="30dp"
      android:visibility="gone"
      android:backgroundTint="#A10000">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="RESET"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>
  </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>